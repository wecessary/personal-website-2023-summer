---
import HeroText from "./HeroText.astro";
import Buttons from "./ui/buttons/Buttons.astro";
---

<div class="flex flex-col gap-6 items-center mt-24">
  <HeroText />
  <h2
    class="w-[90%] md:w-2/3 lg:w-1/2 text-lg md:text-xl text-gray-500 text-center"
  >
    <span class="block">
      A freelancer developer that builds you bespoke, stunning, and fast
      websites.
    </span>
    <span class="block">
      Design, code, test, SEO, and deploy. All taken care for you.
    </span>
  </h2>
  <div class="flex gap-4">
    <Buttons buttonType="primary" text="Contact me" href="/" />
    <Buttons buttonType="secondary" text="Pricing" href="/" />
  </div>
  <div class="flex gap-4 items-center">
    <span class="relative flex h-3 w-3">
      <span
        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-sky-400 opacity-75"
      ></span>
      <span class="relative inline-flex rounded-full h-3 w-3 bg-sky-500"></span>
    </span>
    <span class="text-gray-500">Available for freelance worldwide</span>
  </div>
</div>
