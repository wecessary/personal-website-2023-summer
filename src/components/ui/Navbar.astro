---
import Logo from "../icons/Logo.astro";
import ArrowColourButton from "./buttons/ArrowColourButton.astro";
import Buttons from "./buttons/Buttons.astro";
import HamburgerMenu from "./HamburgerMenu.astro";

const desktopNavLinksStyles = "text-base text-gray-500 hover:text-gray-800";
---

<style>
  .animate-fade-in {
    animation: fade-in ease 0.7s;
    animation-iteration-count: 1;
  }

  @keyframes fade-in {
    0% {
      transform: translateY(40px);
    }
    100% {
      transform: translateY(0px);
    }
  }
</style>

<header
  class="px-5 md:px-10 lg:px-20 xl:px-44 2xl:px-52 z-50 sticky top-0 backdrop-blur-sm pt-7 pb-5"
>
  <nav
    role="navigation"
    aria-label="navigation menu"
    class="flex justify-between items-center"
  >
    <div class="flex items-center">
      <a href="/">
        <Logo styles="w-12 h-auto lg:w-16" />
      </a>
      <div class="ml-12 hidden gap-12 lg:flex">
        <a href="/pricing/websites" class={desktopNavLinksStyles}>Pricing</a>
        <a class={desktopNavLinksStyles}>Serivces</a>
        <a class={desktopNavLinksStyles}>My work</a>
        <a class={desktopNavLinksStyles}>About me</a>
        <a class={desktopNavLinksStyles}>FAQ</a>
      </div>
    </div>
    <Buttons
      isHiddenForMobile
      buttonType="smallPrimary"
      text="Contact me"
      href="/contact-me"
    />
    <HamburgerMenu />
  </nav>
  <nav
    id="mobile-nav-menu"
    role="navigation"
    aria-label="mobile nav menu"
    class="z-50 left-0 h-screen overflow-y-auto bg-white mt-5 mobile-nav-menu absolute hidden w-full"
  >
    <ul class="flex flex-col items-center">
      <li class="mt-20">
        <ArrowColourButton
          text="Pricing"
          borderColour="border-[#FA8787]"
          arrowColour="stroke-[#FA8787]"
          href="/pricing/websites"
        />
      </li>
      <li class="mt-6">
        <ArrowColourButton
          text="Services"
          borderColour="border-[#FF9245]"
          arrowColour="stroke-[#FF9245]"
          href="/"
        />
      </li>
      <li class="mt-6">
        <ArrowColourButton
          text="My work"
          borderColour="border-[#5083FF]"
          arrowColour="stroke-[#5083FF]"
          href="/"
        />
      </li>
      <li class="mt-6">
        <ArrowColourButton
          text="About me"
          borderColour="border-[#6E6CCC]"
          arrowColour="stroke-[#6E6CCC]"
          href="/"
        />
      </li>
      <li class="mt-6">
        <ArrowColourButton
          text="About me"
          borderColour="border-[#FF660B]"
          arrowColour="stroke-[#FF660B]"
          href="/"
        />
      </li>
      <li class="mt-20">
        <Buttons
          text="Contact me"
          buttonType="mobileMenuPrimary"
          href="/contact-me"
        />
      </li>
    </ul>
  </nav>
</header>
