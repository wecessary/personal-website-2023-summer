---
import Hero from "../components/Hero.astro";
import PageLayout from "../layout/PageLayout.astro";
import WebDesign from "../components/icons/WebDesign.astro";
import Ecommerece from "../components/icons/Ecommerece.astro";
import Marketing from "../components/icons/Marketing.astro";
import SEO from "../components/icons/SEO.astro";
---

<PageLayout
  title="Wesley Jessie - Freelance web design and development"
  description="Get custom made websites that stand out from templates. Life time gurantee."
>
  <main class="relative z-10 mx-6">
    <Hero />
    <h3
      class="mt-44 text-center font-bold text-gray-800 text-5xl md:text-5xl xl:text-6xl 2xl:text-7xl"
    >
      Recent work
    </h3>
    <div class="min-h-screen">
      <div class="mt-4 flex justify-center gap-8">
        <div
          class="bg-[#FFF8F3] rounded-lg p-8 xl:w-[700px] xl:h-[700px] flex flex-col justify-between shadow-2xl hover:scale-105 transition-transform border-2"
        >
          <div>
            <p class="font-bold text-[#072F4F] text-3xl">
              <span class="block">New Zealand</span>
              <span class="block">Blue Spring Water</span>
            </p>
            <div class="flex items-center gap-1 mt-10">
              <span><WebDesign styles="w-8 h-8 stroke-gray-400" /></span>
              <span class="text-gray-500">Web design</span>
            </div>
            <div class="flex items-center gap-1 mt-2">
              <span><Ecommerece styles="w-8 h-8 stroke-gray-400" /></span>
              <span class="text-gray-500">E-commerce</span>
            </div>
            <div class="flex items-center gap-1 mt-2">
              <span><Marketing styles="w-8 h-8 stroke-gray-400" /></span>
              <span class="text-gray-500">Marketing Landing Page</span>
            </div>
            <div class="flex items-center gap-1 mt-2">
              <span><SEO styles="w-8 h-8 stroke-gray-400" /></span>
              <span class="text-gray-500">SEO</span>
            </div>
          </div>
          <img src="/images/waiz.jpg" class="rounded-lg mt-10" />
        </div>
        <div
          class="bg-[#F6FBFF] rounded-lg p-8 xl:w-[700px] xl:h-[700px] flex flex-col justify-between shadow-2xl hover:scale-105 transition-transform border-2"
        >
          <div>
            <p class="font-bold text-gray-800 text-5xl">studio-Ro</p>
            <div class="flex items-center gap-1 mt-10">
              <span><WebDesign styles="w-8 h-8 stroke-gray-400" /></span>
              <span class="text-gray-500">Web design</span>
            </div>
            <div class="flex items-center gap-1 mt-2">
              <span><Ecommerece styles="w-8 h-8 stroke-gray-400" /></span>
              <span class="text-gray-500">E-commerce</span>
            </div>
            <div class="flex items-center gap-1 mt-2">
              <span><SEO styles="w-8 h-8 stroke-gray-400" /></span>
              <span class="text-gray-500">SEO</span>
            </div>
          </div>
          <img
            src="/images/studio-ro.jpg"
            class="rounded-lg justify-self-end w-full h-auto"
          />
        </div>
      </div>
    </div>
  </main>
</PageLayout>
