---
import "../styles/global.css";
import PageLayout from "../layout/PageLayout.astro";
---

<PageLayout
  title="Wesley Jessie - Freelance web design and development"
  description="Get custom made websites that stand out from templates. Life time gurantee."
>
  <style>
    .rainbow {
      background: linear-gradient(
        90deg,
        #fc1e1e 0%,
        #ff9245 21.35%,
        #5083ff 48.44%,
        #ff660b 100%
      );
      animation: shine 8s ease infinite;
    }
    @keyframes shine {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
  </style>

  <div class="flex justify-center mt-24">
    <h1
      class="rainbow text-7xl w-3/4 py-2 text-center font-bold text-transparent bg-clip-text bg-[length:300%_300%]"
    >
      Websites built with custom design and code
    </h1>
  </div>

  <div class="flex flex-col gap-6 items-center">
    <p class="w-1/2 text-gray-500 text-center">
      Freelance developer that builds you an unique online presence
    </p>
    <div class="flex gap-4">
      <button class="bg-gray-900 text-white px-8 py-4 rounded-full flex gap-4">
        <span>Contact me</span>
        <span>{">"}</span>
      </button>
      <button class="px-8 py-4 rounded-full flex gap-4">
        <span>Pricing</span>
        <span>{">"}</span>
      </button>
    </div>
    <div class="flex gap-4 items-center">
      <span class="relative flex h-3 w-3">
        <span
          class="animate-ping absolute inline-flex h-full w-full rounded-full bg-sky-400 opacity-75"
        ></span>
        <span class="relative inline-flex rounded-full h-3 w-3 bg-sky-500"
        ></span>
      </span>
      Available for worldwide freelance
    </div>
  </div>
</PageLayout>
