---
import PageLayout from "../../layout/PageLayout.astro";
import PlanCard from "../../components/ui/pricing/PlanCard.astro";

const starterFeatures = [
  {
    text: "Simple and modern designs",
    tooltip: "Clean and modern designs that focus on simplicity and usability.",
  },
  {
    text: "Mobile friendly",
    tooltip: "Your website will look great on all devices.",
  },
  { text: "Lifetime Gurantee" },
  { text: "Hosting" },
  {
    text: "CMS",
    tooltip:
      "You will be able to change the content of your website without touching the code.",
  },
  { text: "Basic SEO" },
  { text: "Enquiry form" },
];

const plusFeatures = [
  {
    text: "Everything in Starter",
  },
  {
    text: "Visually engaging designs",
    tooltip: "Polished designs that reflect your brand.",
  },
  { text: "Design mockups" },
  { text: "Full SEO" },
  { text: "1-2 custom functionalities" },
];
const proFeatures = [
  { text: "Everything in Plus" },
  {
    text: "For websites with more pages",
    tooltip:
      "Pages that share the same design are always free. For more see below.",
  },
  {
    text: "1-4 custom functionalities",
    tooltip: "E.g. login portal, search engine, and AI chatbot.",
  },
];
const enterpriseFeatures = [
  { text: "Large scale company websites" },
  { text: "Full stack web application" },
  { text: "Mobile app development" },
  { text: "Minimum viable product development" },
];
---

<PageLayout
  title="Pricing Plans - Freelance Web development"
  description="Transparent and simple pricing. No surprises. Choose the plan right for you."
>
  <main class="mt-10 mx-6 lg:mx-8 min-h-screen">
    <h1 class="font-bold text-center text-6xl md:text-7xl xl:text-8xl">
      Pricing
    </h1>
    <h2 class="lg:text-lg 2xl:text-xl text-gray-500 text-center">
      Transparent and simple pricing. No surprises.
    </h2>
    <p class="lg:text-lg 2xl:text-xl text-gray-500 text-center">
      <span>Looking for</span>
      <a
        href="/pricing/ecommerce"
        class="underline underline-2 hover:no-underline"
        >e-commerce pricing plans</a
      >?
    </p>
    <div
      class="mt-10 grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 md:gap-6 lg:gap-8 xl:gap-10 2xl:gap-x-16"
    >
      <PlanCard
        name="Starter"
        description="Just make me a website! "
        price="£1,500"
        features={starterFeatures}
        nameColour="text-theme-red"
      />
      <PlanCard
        name="Plus"
        description="For individuals, small companies, and startups."
        price="£4,500"
        features={plusFeatures}
        nameColour="text-theme-orange"
      />
      <PlanCard
        name="Pro"
        description="For mid-sized companies with more content and complex needs."
        price="£9,000"
        features={proFeatures}
        nameColour="text-theme-blue"
      />
      <PlanCard
        name="Enterprise"
        description="If you are looking for a developer who can build you anything."
        price="Custom"
        features={enterpriseFeatures}
        nameColour="text-theme-purple"
      />
    </div>
  </main>
</PageLayout>
